<%- include partials/header.ejs %> 
    <section class="section">
        <div class="columns is-centered">
            <div class="column is-two-fifths">
                <form action="/auth/register" method="POST">
                    
                      <div class="field">
                        <label class="label">Email</label>
                        <div class="control has-icons-left has-icons-right">
                          <input class="input is-danger" id="email" name="email" type="email" placeholder="Email" value="hello@">
                          <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                        </div>
                        <p class="help is-danger">This email is invalid</p>
                      </div>
    
                      <div class="field">
                        <label class="label">Password</label>
                        <div class="control has-icons-left has-icons-right">
                          <input class="input is-danger" id="password" name="password" type="password" placeholder="Password" value="">
                          <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                        </div>
                        <p class="help is-danger">This password is invalid</p>
                      </div>
                      
                      <button class="button is-medium is-rounded is-info is-fullwidth">Submit</button>
                </form>
            </div>
        </div>
    </section>
<%- include partials/footer.ejs %>