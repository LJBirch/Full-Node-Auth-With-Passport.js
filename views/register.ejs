<%- include partials/header.ejs %> 
    <section class="section">
        <div class="columns is-centered">
            <div class="column is-two-fifths">
              <% include ./partials/messages %>
                <form action="/auth/register" method="POST">
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="control">
                          <input class="input" id="name" name="name" type="text" placeholder="Text input" value="name">
                        </div>
                      </div>
                      
                      <div class="field">
                        <label class="label">Email</label>
                        <div class="control has-icons-left has-icons-right">
                          <input class="input is-danger" id="email" name="email" type="email" placeholder="Email" value="hello@">
                          <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                        </div>
                        <p class="help is-danger">This email is invalid</p>
                      </div>
    
                      <div class="field">
                        <label class="label">Password</label>
                        <div class="control has-icons-left has-icons-right">
                          <input class="input is-danger" id="password" name="password" type="password" placeholder="Password" value="">
                          <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                        </div>
                        <p class="help is-danger">This password is invalid</p>
                      </div>

                      <div class="field">
                        <label class="label">Confirm Password</label>
                        <div class="control has-icons-left has-icons-right">
                          <input class="input is-danger" id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Password" value="">
                          <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fas fa-exclamation-triangle"></i>
                          </span>
                        </div>
                        <p class="help is-danger">This password is invalid</p>
                      </div>
                      
                      <div class="field">
                        <div class="control">
                          <label class="checkbox">
                            <input type="checkbox" id="tos-agreement" name="tos-agreement">
                            I agree to the <a href="#">terms and conditions</a>
                          </label>
                        </div>
                      </div>
                      
                      <button class="button is-medium is-rounded is-info is-fullwidth">Submit</button>
                </form>
            </div>
        </div>
    </section>

    <script src="/js/register.js"></script>
<%- include partials/footer.ejs %>